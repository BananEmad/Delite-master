<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fci.delite.home">

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="53dp"
        android:layout_height="49dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_alignTop="@+id/imgLeftA"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imgSlideShow"
        android:layout_width="294dp"
        android:layout_height="280dp"
        android:layout_above="@+id/radioButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="52dp" />

    <ImageButton
        android:id="@+id/imgLeftA"
        android:layout_width="53dp"
        android:layout_height="49dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_above="@+id/radioButton3"
        android:layout_marginBottom="182dp" />

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="69dp"
        android:alpha="0.5"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="80dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="311dp"
            tools:layout_editor_absoluteY="427dp" />

        <ImageButton
            android:id="@+id/imgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="80dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="485dp" />

        <ImageButton
            android:id="@+id/imgOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="80dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="427dp" />

        <ImageButton
            android:id="@+id/imgBooking"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="80dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="485dp" />

    </LinearLayout>


    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="376dp"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_toStartOf="@+id/radioButton2" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="376dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_toEndOf="@+id/radioButton2" />
</RelativeLayout>
